{
  "repository": {
    "type": "git",
    "url": "https://gitlab.chaincity.net:8008/Common/Front-End/nut.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GitKou/Nut/issues"
  },
  "homepage": "https://github.com/GitKou/Nut#readme",
  "description": "",
  "scripts": {
    "build": "father build",
    "docDev": "father doc dev",
    "docBuild": "father doc build",
    "docDeploy": "father doc deploy",
    "doc": "father doc",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "postinstall": "umi g tmp",
    "lint": "umi g tmp && npm run lint:js && npm run lint:style && npm run lint:prettier && npm run tsc",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && npm run lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:prettier": "prettier -c --write \"src/**/*\" --end-of-line auto",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "precommit": "lint-staged",
    "prettier": "prettier -c --write \"src/**/*\"",
    "tsc": "tsc --noEmit"


  },
  "devDependencies": {
    "father": "^2.30.10",
    "lerna": "^4.0.0"
  },
  "name": "lc-nut",
  "dependencies": {
    "@umijs/fabric": "^2.8.1",
    "antd": "^4.16.13"
  },
  "version": "0.0.1",
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "gitHooks": {
    "commit-msg": "fabric verify-commit"
  }
}
